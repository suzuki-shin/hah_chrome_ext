  <div class="control-group">
	<div class="controls">
	  <label class="control-label" for="start_hitahint_code">START_HITAHINT:</label>
	  <input type="text" class="input-small" id="start_hitahint_code"/>
	  <label class="checkbox">Ctrl<input type="checkbox" id="start_hitahint_ctrl" /></label>
	  <label class="checkbox">Alt<input type="checkbox" id="start_hitahint_alt" /></label>
	</div>
  </div>
  <br/>
  FOCUS_FORM: <input type="text" class="input-small" id="focus_form_code"/>
  Ctrl<input type="checkbox" id="focus_form_ctrl" />
  Alt<input type="checkbox" id="focus_form_alt" />
  <br/>

  TOGGLE_SELECTOR: <input type="text" class="input-small" id="toggle_selector_code"/>
  Ctrl<input type="checkbox" id="toggle_selector_ctrl" />
  Alt<input type="checkbox"  id="toggle_selector_alt" />
  <br/>
  CANCEL: <input type="text" class="input-small" id="cancel_code"/>
  Ctrl<input type="checkbox" id="cancel_ctrl" />
  Alt<input type="checkbox"  id="cancel_alt" />
  <br/>
  MOVE_NEXT_SELECTOR_CURSOR: <input type="text" class="input-small" id="move_next_selector_cursor_code"/>
  Ctrl<input type="checkbox" id="move_next_selector_cursor_ctrl" />
  Alt<input type="checkbox"  id="move_next_selector_cursor_alt" />
  <br/>
  MOVE_PREV_SELECTOR_CURSOR: <input type="text" class="input-small" id="move_prev_selector_cursor_code"/>
  Ctrl<input type="checkbox" id="move_prev_selector_cursor_ctrl" />
  Alt<input type="checkbox"  id="move_prev_selector_cursor_alt" />
  <br/>
  MOVE_NEXT_FORM: <input type="text" class="input-small" id="move_next_form_code"/>
  Ctrl<input type="checkbox" id="move_next_form_ctrl" />
  Alt<input type="checkbox"  id="move_next_form_alt" />
  <br/>

<p>
